{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        // directorio de salida
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
    },
    // archivo de entrada o los archivos que queremos complilar
    "include": ["src/**/*.*"]
}